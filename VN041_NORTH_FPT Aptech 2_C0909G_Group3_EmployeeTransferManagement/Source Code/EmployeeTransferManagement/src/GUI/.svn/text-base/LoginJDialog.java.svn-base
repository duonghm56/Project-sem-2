    public void Login() throws SQLException {
        Vector<Admin> v = new Vector<Admin>();
        String userName = txtUsername.getText();
        String passWord = jPassword.getText();
        Boolean b = false;

        if (rdEmployee.isSelected()) {
            System.out.println("ban login empl");
        }
        if (rdAdministrator.isSelected()) {
            v = AdminDAO.getAdminFromDB(userName);
            for (Admin admin : v) {
                if (admin.getUserName().equals(userName) && admin.getPassWord().equals(passWord)) {
                    System.out.println("Login Ok");
                    b = true;
                    MainAdministrator mains = new MainAdministrator();
                    this.dispose();
                    mains.setVisible(true);
                }
            }
            if (!b) {
                System.out.println("Sai");
            }
        }


    }
    
